{
  "name": "ai-skills-monorepo",
  "version": "1.2.0",
  "description": "Auto-updating, framework-agnostic, production-grade SKILLS.md files for AI agents.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter=ai-skills dev",
    "build": "pnpm -r build",
    "validate": "pnpm --filter=@ai-skills/skills-registry validate-all-skills",
    "test": "pnpm -r --filter @ai-skills/* test",
    "lint": "eslint . --ext .ts,.js --config .eslintrc.cjs && pnpm -r lint",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "format": "prettier --write . && python -m black backend/python",
    "generate": "cd backend && pnpm run generate",
    "cli": "pnpm --filter=ai-skills"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.45.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.1"
  },
  "packageManager": "pnpm@10.28.2"
}
