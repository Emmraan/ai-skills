{
  "name": "ai-skills",
  "version": "0.0.1",
  "description": "Auto-updating, framework-agnostic, production-grade SKILLS.md files for AI agents",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter=@ai-skills/cli dev",
    "build": "pnpm -r build",
    "validate": "pnpm --filter=@ai-skills/skills-registry validate-all-skills",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts,.js,.py && pnpm -r lint",
    "format": "prettier --write . && black backend/python",
    "generate": "cd backend && pnpm run generate",
    "cli": "pnpm --filter=@ai-skills/cli"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@10.28.2"
}
